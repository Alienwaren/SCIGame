<?xml version="1.0"?>
<root type = "enemy">

	<!-- CPhysical -->

	<!--nazwa obiektu-->
	<genre genre = "greenTurret" />
	
	<!--zakres dla promienia kolizji-->
	<radius
		circle_radius = "32.0"
	/>
	<!--rozmiar obszaru prostok¹tnego-->
	<rect_size
		rect_size_x = "20.0"
		rect_size_y = "23.0"
	/>
	
	<!--skala-->
	<scale
		scale_body = "1.0"
		scale_head = "1.0"
	/>

	<!--pu³ap obiektu wzglêdem pod³o¿a-->
	<altitude
		altitude = "1.0"
	/>

	<!--flagi decyduj¹ce o wygl¹dzie obiektu-->
	<physical_config
		use_displayable_body = "true"
		use_shadow_body = "true"

	/>
	
	<!--animacja CPhysical - test-->
	<unit_animation
		animation_body = "anim_one"
	/>

	<!--CActor-->
	
	<!--wartosc energi poczatkowej obiektu-->
	<unit_energy
		energy = "100"
	/>
	
	<!--dane techniczne-->
	<technical_data
		mass = "150"
		temperature = "50"
		speed = "20"
		movabled = "true"
	/>

	<!--zestawy animacji-->
	<!--nazwa animacji musi byc zgodna z nazwami zarejestrowqanymi, class CAnimationManager-->
	<!--typ animacji musi byc zgodny z wpisami w tablicy zawieraj¹cej zdefiniowane typy animacji, class CAnimSet-->
	<animset name_animset = "anim_greenTurret">
		<!--body-->
		<anim name = "anim_greenTurret" type = "default_body" />
		<anim name = "anim_greenTurret" type = "move_body" />
	</animset>
	

</root>
