<?xml version="1.0"?>
<root type = "enemy">

	<!-- CPhysical -->

	<!--nazwa obiektu-->
	<genre genre = "Nasty Worm" />
	
	<!--zakres dla promienia kolizji-->
	<radius
		circle_radius = "40.0"
	/>
	<!--rozmiar obszaru prostokątnego-->
	<rect_size
		rect_size_x = "32.0"
		rect_size_y = "48.0"
	/>
	
	<!--skala-->
	<scale
		scale_body = "1.0"
		scale_head = "1.0"
	/>

	<!--pułap obiektu względem podłoża-->
	<altitude
		altitude = "1.0"
	/>

	<!--flagi decydujące o wyglądzie obiektu-->
	<physical_config
		use_displayable_body = "true"
		use_shadow_body = "true"
		use_displayable_head = "false"
		use_shadow_head = "false"
	/>
	
	<!--CActor-->
	
	<!--wartosc energi poczatkowej obiektu-->
	<unit_energy
		energy = "100"
	/>
	
	<!--dane techniczne-->
	<technical_data
		mass = "134.78"
		temperature = "36.6"
		speed = "100"
		movabled = "true"
	/>

	<!--zestawy animacji-->
	<!--nazwa animacji musi byc zgodna z nazwami zarejestrowqanymi, class CAnimationManager-->
	<!--typ animacji musi byc zgodny z wpisami w tablicy zawierającej zdefiniowane typy animacji, class CAnimSet-->
	<animset name_animset = "animset_one">
		<!--body-->
		<anim name = "anim_gods" type = "default_body" />
		<anim name = "anim_gods" type = "move_body" />
		<anim name = "anim_gods" type = "death_body" />
		<!--head-->
		<anim name = "anim_gods" type = "default_head" />
		<anim name = "anim_gods" type = "shot_head" />
		<anim name = "anim_gods" type = "ammo_loading_head" />
		<anim name = "anim_gods" type = "death_head" />
	</animset>

</root>
